@model intrapp.Models.ViewModels.SummonerInfo
@{
    ViewBag.Title = "Home Page";
}

<div class="row" style="margin-bottom: 20px;">
    <div class="col-md-12">
        <div name="waiting-div" style="text-align: center; display: none; margin-top: 10px;" class="float-right">
            <span class="loader"><span class="loader-inner"></span></span>
        </div>
    </div>
</div>
<div class="row" style="margin-bottom: 20px;">
    <div class="col-md-3">
        <div class="card" style="margin-bottom: 5px; border: none;">
            <div class="card-header" style="border: none;">
                <b>Summoner</b>
            </div>
            <div class="card-body" style="border: none;">
                <div class="row">
                    <div class="col-3 col-sm-3 col-md-12 col-lg-6 col-xl-5">
                        <div class="image-container">
                            <img src="@Model.ProfileIconUrl" alt="Image unavailable" height="75" width="75" />
                            <span class="level">@Model.Summoner.SummonerLevel</span>
                        </div>
                    </div>
                    <div class="col-7 col-sm-7 col-md-12 col-lg-12 col-xl-7">
                        <b>@Model.Summoner.Name</b><br />
                        @Model.LastPlayed
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="card" style="margin-right: -15px;">
            <div class="card-header">
                <b>League Entries</b>
            </div>
            <div class="card-body">
                @Html.Partial("_LeagueEntries", Model.LeagueEntries)
            </div>
        </div>
    </div>
</div>
<div class="row">
    <h4 style="margin-left: 15px;">Match history</h4>
    <hr />
</div>
<div class="row">
    <div id="matchHistory" class="w-100" style="margin-left: 15px;">
        @Html.Partial("_MatchHistory", Model.MatchHistory.Matches)
        <span style="display: none;">@Model.Region</span>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <button id="loadBtn" class="btn btn-primary">Load more</button>
        <div name="waiting-div" style="text-align: center; margin-right: -14px; display: none;" class="float-right">
            <span class="loader"><span class="loader-inner"></span></span>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            SetSummonerInfoHandlers("@Model.Summoner.AccountId", "@Model.Region");
            $("#summonerName").val("");
        });

        function OpenMatchBreakdown(accId, region, gameId) {
            if ($("div[name='MoreDetailsBtn_" + gameId + "']").css('display') !== 'none') {
                if ($("#overview_" + gameId).length) {
                    $("#BreakdownDiv_" + gameId).slideDown(400);
                    $("div[name='MoreDetailsBtn_" + gameId + "']").hide();
                    $("div[name='CloseBtn_" + gameId + "']").show();
                    $("#breakdown_hr_" + gameId).show();
                }
                else {
                    $("#BreakdownWaitingDiv_" + gameId).show();
                    $.ajax({
                        url: "/Summoner/_MatchBreakdown",
                        type: "POST",
                        data: { accountId: accId, region: region, gameId: gameId },
                        success: function (data) {
                            $("#BreakdownDiv_" + gameId).append(data);
                            $("#BreakdownDiv_" + gameId).slideDown(400);
                            $("#BreakdownWaitingDiv_" + gameId).hide();

                            $("div[name='MoreDetailsBtn_" + gameId + "']").hide();
                            $("div[name='CloseBtn_" + gameId + "']").show();
                            $("#breakdown_hr_" + gameId).show();
                        }
                    });
                }
            }
        }

        function CloseMatchBreakDown(gameId) {
            if ($("div[name='CloseBtn_" + gameId + "']").css('display') !== 'none') {
                $("#BreakdownDiv_" + gameId).slideUp(400);
                $("div[name='MoreDetailsBtn_" + gameId + "']").show();
                $("div[name='CloseBtn_" + gameId + "']").hide();
                $("#breakdown_hr_" + gameId).hide();
            }
        }

        function ShowAnalysis(gameId) {
            if ($("#analysis_" + gameId).css('display') === 'none') {
                $("#overview_" + gameId).slideToggle(400);
                $("#build_" + gameId).hide();
                $("#analysis_" + gameId).slideToggle(400);

                $("#analysisLink").addClass("active");
                $("#overviewLink").removeClass("active");
                $("#buildLink").removeClass("active");
            }
        }

        function ShowOverview(gameId) {
            if ($("#overview_" + gameId).css('display') === 'none') {
                $("#analysis_" + gameId).slideToggle(400);
                $("#build_" + gameId).hide();
                $("#overview_" + gameId).slideToggle(400);

                $("#overviewLink").addClass("active");
                $("#analysisLink").removeClass("active");
                $("#buildLink").removeClass("active");
            }
        }
    </script>
}
